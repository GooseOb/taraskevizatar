{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"style": {
				"useTemplate": "off",
				"noNonNullAssertion": "off",
				"useSingleVarDeclarator": "off"
			}
		}
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"indentStyle": "tab"
		}
	},
	"json": {
		"parser": {
			"allowTrailingCommas": true
		}
	},
	"files": {
		"includes": ["**", "!**/dist/**/*"]
	}
}
